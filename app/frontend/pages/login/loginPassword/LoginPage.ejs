<div id="loginPage-content">
    <div id="text">
        <h1><%= title %></h1>
        <div class="form-container">
            <form id="RegisterForm" action="/submit-form" method="post">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                
                <label for="password">Passwort</label>
                <input type="password" id="password" name="password" required>

                <a id="password-forgotten" href="/login/passwordSupport"><b>Passwort vergessen?</b></a>

                <div class="button-wrapper">
                    <button type="submit">Anmelden</button>
                </div>
            </form>
        </div>
        <p class="small-text">Hast du noch keinen Account?
    <a id="register" href="/register">
        <u><b>Sign up</b></u>
    </a>
    </p>
    </div>
</div>