<div id="wishlistOverview-content">
    <% wishlists.forEach(wishlist => {%>
    <div class="Profilreihe">
        <div class="Profil">
            <div class="Spalte1">
                <div class="header">
                    <a href="http://localhost:3000/wishlist/<%= wishlist.id %>">
                        <img class="heart" src="http://localhost:3000/img/heart-svgrepo-com.svg">
                    </a>
                    <p> <strong class="Überschrift">Name:</strong> <%= wishlist.name %> </p>
                </div>
                <p> <strong class="Überschrift">Beschreibung:</strong> <%= wishlist.description %></p>
            </div>
            <div class="Spalte2">
                <button id="deleteWishlist" data-id="<%= wishlist.id %>" onclick="document.getElementById('wishlistDeleteOverlay').style.display = 'flex';">
                    <img class="trash" src="http://localhost:3000/img/depositphotos_649330112-stock-illustration-garbage-bin-line-icon-linear-removebg-preview.png">
                </button>
            </div>
        </div>
    </div>
    <% }) %>
    <button class="newprofile" onclick="document.getElementById('wishlistCreateOverlay').style.display = 'flex';">
        <p> Neue Wunschliste erstellen </p>
    </button>
</div>

<!-- Wunschliste-Erstellen-Overlay -->
<div id="wishlistCreateOverlay" class="overlay" style="display: none">
    <div class="modal">
        <form id="newWishlist" onsubmit='document.getElementById("wishlistCreateOverlay").style.display = "none"; handleCreateWishlist(event, "<%=token%>");'>
            <label for="name">Name</label>
            <input type="text" id="name-new" name="name-new" required>
            
            <label for="description">Beschreibung</label>
            <input type="text" id="description-new" name="description-new" required>
            <div class="button-wrapper">
                <button type="submit">Wunschliste erstellen</button>
            </div>
        </form>
        <div class="button-wrapper">
                <button id="abbrechen" onclick='document.getElementById("wishlistCreateOverlay").style.display = "none";'>Abbrechen</button>
        </div>
    </div>
</div>

<!-- Wunschliste-Löschen-Overlay -->
<div id="wishlistDeleteOverlay" class="overlay" style="display: none">
    <div class="modal">
        
            <button id="delete" onclick='document.getElementById("wishlistDeleteOverlay").style.display = "none"; handleDeleteWishlist(event, "<%=token%>");'>Wunschliste löschen</button>
            <div class="button-wrapper">
                <button id="abbrechen" onclick='document.getElementById("wishlistDeleteOverlay").style.display = "none";'>Abbrechen</button>
            </div>
        </form>
    </div>
</div>