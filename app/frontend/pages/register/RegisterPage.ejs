<div id="registerPage-content">
    <!-- Hier werden die Beispiel Componenten geladen. -->
    <div class="text-container">
    <h1 class="no-margin" id="welcome">Wilkommen im Online-Shop des</h1>
    <h1 class="no-margin" id="golden-writing">Ordens der letzten Haltestelle</h1>
    <p class="no-margin" id="small-text">Hast du schon einen Account?
    <a href="/login">
        <u><b>Log in</b></u>
    </a>
    </p>
    <div class="form-container">
        <form id="RegisterForm" action="/submit-form" method="post">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" required>

            <label for="username">Benutzername</label>
            <input type="text" id="username" name="username">
            
            <label for="password">Passwort</label>
            <input type="password" id="password" name="password" required>
            
            
            <div class="password-requirements">
                <span class="requirement" id="length-requirement"><div class="dot"></div>At least 8 characters</span>
                <span class="requirement" id="uppercase-requirement"><div class="dot"></div>At least one uppercase letter</span>
                <span class="requirement" id="lowercase-requirement"><div class="dot"></div>At least one lowercase letter</span>
                <span class="requirement" id="number-requirement"><div class="dot"></div>At least one number</span>
                <span class="requirement" id="specialchar-requirement"><div class="dot"></div>At least one special character</span>
            </div>

            <div class="button-wrapper">
                <button type="submit">Erstelle Account</button>
            </div>
        </form>
    </div>
    
    </div>

    <div class="picture">
        <img id="picture" src="http://localhost:3000/img/Haltestelle_Register.png" alt="picture of bus stop" style="width: auto; height: 100%;">
    </div>
    <script src="RegisterPage.js"></script>
</div>