<div id="checkoutPage-content">
    <!-- Hier werden die Beispiel Componenten geladen. -->

    <div class="checkout-grid">
        <% cartItems.forEach(cI => {%>
        <div class="checkout-card">
            <div class="image-wrapper">
            <img src="<%= cI.product?.image || 'http://localhost:3000/img/BeispielImg.png' %>" alt="Produktblid">
            </div>
            <div class="products-info">
                <h2><%= cI.product.name %></h2>
                <p><%= cI.product.description %></p>
            </div>
            <div class="price-buy">
            <span class="price"><%= cI.product.price/100 %>â‚¬</span>
            <button class="buy-button">Warenkorb</button>
            </div>
        </div>
    </div>
    <% }) %>
</div>

